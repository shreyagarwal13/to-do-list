<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%=listTitle %></h1>
  </div>


  <div class="box">

    <% for(var i=0; i<newItems.length ; i++){ %>
    <form class="" action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%= newItems[i]._id %>" onChange="this.form.submit()">
        <p> <%= newItems[i].name %> </p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %>"></input>
    </form>
    <% } %>

    <form class="item enter-task" action="/" method="post">
      <input type="text" name="item" placeholder="New Task" autocomplete="off">
      <button type="submit" name="list" value= '<%= listTitle %>' >+</button>
    </form>

  </div>

  <div class="box">
    <form class="switch-form" action="/switch" method="post">
      <input class="new-list" type="text" name="newList" placeholder="List Name" autocomplete="off">
      <button class="switch-btn" type="submit" name="goto" value='switch'>Go to list</button>
      <button class="home-btn" type="submit" name="goto" value='home'><i class="fas fa-home"></i></button>
    </form>
  </div>

<%- include("footer") -%>

<%- include("header") -%>

  <div class="box" id="heading">
    <h1> Today</h1>
  </div>


  <div class="box">

    <% for(var i=0; i<newItems.length ; i++){ %>
    <form class="" action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%= newItems[i]._id %>" onChange="this.form.submit()">
        <p> <%= newItems[i].name %> </p>
      </div>
      <input type="hidden" name="listName" value=""></input>
    </form>
    <% } %>

    <form class="item enter-task" action="/" method="post">
      <div class="item">
        <input type="text" name="item" placeholder="New Task" autocomplete="off">
      </div>
      <button type="submit" name="list" class="add" value= "" >+</button>
    </form>

  </div>

  <div class="sign-out">
    <form action="/signout" method="post">
      <button class="sign-out-btn" type="submit" name="goto" value='home'>Sign Out</button>
    </form>
  </div>

<%- include("footer") -%>
